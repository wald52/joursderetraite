/* Définition des variables de couleur pour les modes clair et sombre */
:root {
    /* Couleurs par défaut (mode clair) */
    --bg-color: #f4f4f4;
    --container-bg: #fff;
    --text-color: var(--h1-color);
    --input-bg: #fff;
    --input-border: #ddd;
    --button-bg: #2E7D32;
    --button-hover: #1B5E20;
    --copy-btn-bg: #1565C0;
    --copy-btn-hover: #0D47A1;
    --install-btn-bg: #1565C0;
    --install-btn-hover: #0D47A1;
    --result-bg: #f9f9f9;
    --result-border: #ddd;
    --h1-color: var(--h1-color);
}

/* Mode sombre basé sur les préférences système */
@media (prefers-color-scheme: dark) {
    :root {
        --bg-color: #121212;
        --container-bg: #1e1e1e;
        --text-color: #e0e0e0;
        --input-bg: #2d2d2d;
        --input-border: #444;
        --button-bg: #388e3c;
        --button-hover: #4caf50;
        --copy-btn-bg: #1976d2;
        --copy-btn-hover: #2196f3;
        --install-btn-bg: #1976d2;
        --install-btn-hover: #2196f3;
        --result-bg: #2d2d2d;
        --result-border: #444;
        --h1-color: #e0e0e0;
    }
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 20px;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s, color 0.3s;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    background: var(--container-bg);
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s;
}

h1 {
    text-align: center;
    color: var(--h1-color);
}

.input-group {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="number"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid var(--input-border);
    border-radius: 4px;
    box-sizing: border-box; /* Inclut le padding dans la largeur totale */
}

button {
    background-color: var(--button-bg); /* Couleur verte plus foncée pour meilleur contraste */
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    text-align: center;
    justify-content: center; /* Centre le contenu du bouton */
}

button:hover {
    background-color: var(--button-hover); /* Couleur encore plus foncée au survol */
}

/* Amélioration du contraste pour le bouton de copie aussi */
.copy-btn {
    background-color: var(--copy-btn-bg); /* Bleu plus foncé pour meilleur contraste */
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center; /* Centre le contenu du bouton */
    gap: 5px;
    font-weight: bold;
    text-align: center;
}

.copy-btn:hover {
    background-color: var(--copy-btn-hover); /* Bleu encore plus foncé au survol */
}

.copy-btn:active {
    transform: scale(0.98);
}

.result {
    margin-top: 20px;
}

.result p {
    margin: 10px 0;
}

.result-single-line {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
    padding: 15px;
    background-color: var(--result-bg);
    border: 1px solid var(--input-border);
    border-radius: 4px;
    min-height: 50px;
    box-sizing: border-box; /* Inclut le padding dans la largeur totale */
    justify-content: space-between; /* Assure une bonne répartition de l'espace */
}

#result-text {
    flex-grow: 1;
    font-weight: bold;
    color: var(--h1-color);
    word-break: break-word;
}

.copy-btn {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 5px;
    flex-shrink: 0; /* Empêche le bouton de rétrécir */
}

.copy-btn:hover {
    background-color: #0b7dda;
}

.copy-btn:active {
    transform: scale(0.98);
}

/* Assure que le bouton est stylé correctement */
.copy-btn {
    align-items: center;
    gap: 5px;
}

/* Style pour le bouton d'installation */
.install-btn {
    background-color: var(--copy-btn-bg); /* Utilisation de la même couleur améliorée pour la cohérence */
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
    font-weight: bold;
}

.install-btn:hover {
    background-color: var(--copy-btn-hover);
}

.install-section {
    text-align: center;
    margin-top: 20px;
}

/* Classe pour le texte accessible uniquement aux lecteurs d'écran */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Améliorations pour les appareils mobiles */
@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    .container {
        padding: 15px;
        margin: 5px;
    }

    .result-single-line {
        flex-direction: column;
        align-items: stretch;
        gap: 10px;
    }

    .copy-btn {
        align-self: flex-start; /* Aligner le bouton à gauche */
        width: auto;
    }

    #result-text {
        text-align: center;
        order: -1; /* Mettre le texte en premier dans l'affichage mobile */
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
        margin-bottom: 10px;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 10px;
        margin: 2px;
    }

    h1 {
        font-size: 1.4em;
    }

    button, .copy-btn {
        width: 100%;
        padding: 12px;
    }
}
